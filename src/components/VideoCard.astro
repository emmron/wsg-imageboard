<script>
  import { selectedVideo } from '../lib/stores.ts';

  class VideoCard {
    private element: HTMLElement;
    private video: HTMLVideoElement;
    private loading: HTMLElement;
    private playOverlay: HTMLElement;
    private durationBadge: HTMLElement;
    private durationText: HTMLElement;
    private isHovered = false;
    private previewTimeout: number | null = null;
    private videoData: any;

    constructor(element: HTMLElement) {
      this.element = element;
      this.video = element.querySelector('.thumbnail-video') as HTMLVideoElement;
      this.loading = element.querySelector('.thumbnail-loading') as HTMLElement;
      this.playOverlay = element.querySelector('.play-overlay') as HTMLElement;
      this.durationBadge = element.querySelector('.duration-badge') as HTMLElement;
      this.durationText = element.querySelector('.duration-text') as HTMLElement;
      this.videoData = JSON.parse(element.dataset.videoData || '{}');

      this.init();
    }

    private init() {
      this.setupEventListeners();
      this.loadThumbnail();
    }

    private setupEventListeners() {
      this.element.addEventListener('click', this.handleClick.bind(this));
      this.element.addEventListener('keypress', this.handleKeyPress.bind(this));
      this.element.addEventListener('mouseenter', this.handleMouseEnter.bind(this));
      this.element.addEventListener('mouseleave', this.handleMouseLeave.bind(this));
      
      if (this.video) {
        this.video.addEventListener('loadedmetadata', this.handleThumbnailLoad.bind(this));
      }
    }

    private loadThumbnail() {
      if (this.video) {
        // Force load the first frame
        this.video.currentTime = 0.1;
      }
    }

    private handleThumbnailLoad() {
      if (this.loading) {
        this.loading.style.display = 'none';
      }
      
      if (this.video && this.durationBadge && this.durationText) {
        const duration = this.video.duration;
        if (duration && isFinite(duration)) {
          this.durationText.textContent = this.formatDuration(duration);
          this.durationBadge.style.display = 'block';
        }
      }
    }

    private formatDuration(seconds: number): string {
      if (!seconds || !isFinite(seconds)) return '0:00';
      const mins = Math.floor(seconds / 60);
      const secs = Math.floor(seconds % 60);
      return `${mins}:${secs.toString().padStart(2, '0')}`;
    }

    private handleClick() {
      selectedVideo.set(this.videoData);
    }

    private handleKeyPress(event: KeyboardEvent) {
      if (event.key === 'Enter' || event.key === ' ') {
        event.preventDefault();
        selectedVideo.set(this.videoData);
      }
    }

    private handleMouseEnter() {
      this.isHovered = true;
      this.element.classList.add('hovered');
      
      // Add subtle video preview on hover with delay
      this.previewTimeout = window.setTimeout(() => {
        if (this.video && this.isHovered) {
          this.video.currentTime = 1; // Show frame at 1 second
        }
      }, 500);
    }

    private handleMouseLeave() {
      this.isHovered = false;
      this.element.classList.remove('hovered');
      
      if (this.previewTimeout) {
        clearTimeout(this.previewTimeout);
      }
      
      if (this.video) {
        this.video.currentTime = 0;
      }
    }
  }

  // Initialize all video cards
  document.addEventListener('DOMContentLoaded', () => {
    const videoCards = document.querySelectorAll('.video-card');
    videoCards.forEach(card => new VideoCard(card as HTMLElement));
  });

  // Also initialize any dynamically added cards
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      mutation.addedNodes.forEach((node) => {
        if (node.nodeType === Node.ELEMENT_NODE) {
          const element = node as Element;
          if (element.classList.contains('video-card')) {
            new VideoCard(element as HTMLElement);
          }
          
          const cards = element.querySelectorAll('.video-card');
          cards.forEach(card => new VideoCard(card as HTMLElement));
        }
      });
    });
  });

  observer.observe(document.body, { childList: true, subtree: true });
</script>

