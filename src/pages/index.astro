      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <h2>Ready to Get Started?</h2>
        <p>Join thousands of creators and fans already on FanConnect</p>
        <div class="cta-actions">
          <a href="/signup" class="btn-primary btn-large">Sign Up Now</a>
          <a href="/login" class="btn-outline btn-large">Sign In</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  import { supabase } from '../lib/supabase';
  import { isAuthenticated } from '../lib/auth-store';

  // Check auth state and redirect if needed
  isAuthenticated.subscribe((authenticated) => {
    if (authenticated) {
      // If user is authenticated, could redirect to feed
      // window.location.href = '/feed';
    }
  });

  // Load platform stats
  async function loadStats() {
    try {
      // Get creator count
      const { count: creators } = await supabase
        .from('profiles')
        .select('*', { count: 'exact', head: true })
        .eq('is_creator', true);

      // Get post count
      const { count: posts } = await supabase
        .from('posts')
        .select('*', { count: 'exact', head: true });

      // Get active subscriptions count
      const { count: subscriptions } = await supabase
        .from('subscriptions')
        .select('*', { count: 'exact', head: true })
        .eq('status', 'active');

      // Update stats
      document.getElementById('creatorCount')!.textContent = (creators || 0).toLocaleString();
      document.getElementById('postCount')!.textContent = (posts || 0).toLocaleString();
      document.getElementById('subscriberCount')!.textContent = (subscriptions || 0).toLocaleString();
    } catch (error) {
      console.error('Error loading stats:', error);
    }
  }

  // Load featured creators
  async function loadFeaturedCreators() {
    try {
      const { data: creators, error } = await supabase
        .from('profiles')
        .select('*')
        .eq('is_creator', true)
        .limit(6)
        .order('created_at', { ascending: false });

      if (error) throw error;

      const grid = document.getElementById('creatorsGrid')!;

      if (!creators || creators.length === 0) {
        grid.innerHTML = '<p class="empty">No creators yet. Be the first!</p>';
        return;
      }

      grid.innerHTML = creators.map(creator => `
        <a href="/profile/${creator.username}" class="creator-card">
          <div class="creator-avatar">
            ${creator.avatar_url
              ? `<img src="${creator.avatar_url}" alt="${creator.username}">`
              : `<div class="avatar-placeholder"></div>`}
          </div>
          <h3>${creator.display_name || creator.username}</h3>
          <p class="creator-username">@${creator.username}</p>
          ${creator.bio ? `<p class="creator-bio">${creator.bio.substring(0, 80)}...</p>` : ''}
          <div class="creator-price">
            ${creator.subscription_price > 0
              ? `$${creator.subscription_price.toFixed(2)}/month`
              : 'Free'}
          </div>
        </a>
      `).join('');
    } catch (error) {
      console.error('Error loading creators:', error);
    }
  }

  // Initialize
  loadStats();
  loadFeaturedCreators();
</script>

<style>
  .main {
    min-height: 100vh;
  }

  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 6rem 2rem 4rem 2rem;
    text-align: center;
    margin-top: 60px;
  }

  .hero-content h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .hero-content p {
    font-size: 1.5rem;
    margin: 0 0 2rem 0;
    opacity: 0.95;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .btn-primary,
  .btn-secondary {
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
    font-size: 1.1rem;
  }

  .btn-primary {
    background: white;
    color: #667eea;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .hero-stats {
    display: flex;
    gap: 4rem;
    justify-content: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    max-width: 800px;
    margin: 0 auto;
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
  }

  .stat-label {
    font-size: 1rem;
    opacity: 0.9;
  }

  /* Features Section */
  .features {
    padding: 5rem 2rem;
    background: white;
  }

  .features h2 {
    text-align: center;
    font-size: 2.5rem;
    margin: 0 0 3rem 0;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .feature-card {
    text-align: center;
    padding: 2rem;
    border-radius: 1rem;
    background: #f8f9fa;
    transition: transform 0.2s;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.3rem;
  }

  .feature-card p {
    margin: 0;
    color: #666;
    line-height: 1.6;
  }

  /* Featured Creators */
  .featured-creators {
    padding: 5rem 2rem;
    background: #f8f9fa;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .section-header h2 {
    margin: 0;
    font-size: 2rem;
  }

  .view-all {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
  }

  .view-all:hover {
    text-decoration: underline;
  }

  .creators-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .creator-card {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .creator-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .creator-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin: 0 auto 1rem auto;
    overflow: hidden;
    background: #f0f0f0;
  }

  .creator-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .avatar-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .creator-card h3 {
    margin: 0 0 0.25rem 0;
    font-size: 1.25rem;
  }

  .creator-username {
    color: #999;
    margin: 0 0 0.75rem 0;
    font-size: 0.95rem;
  }

  .creator-bio {
    color: #666;
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .creator-price {
    color: #667eea;
    font-weight: 700;
    font-size: 1.1rem;
  }

  /* How It Works */
  .how-it-works {
    padding: 5rem 2rem;
    background: white;
  }

  .how-it-works h2 {
    text-align: center;
    font-size: 2.5rem;
    margin: 0 0 3rem 0;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .step {
    text-align: center;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto 1.5rem auto;
  }

  .step h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.3rem;
  }

  .step p {
    margin: 0;
    color: #666;
    line-height: 1.6;
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-align: center;
  }

  .cta-section h2 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
  }

  .cta-section p {
    font-size: 1.25rem;
    margin: 0 0 2rem 0;
    opacity: 0.95;
  }

  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn-large {
    padding: 1.25rem 2.5rem;
    font-size: 1.1rem;
  }

  .btn-outline {
    background: transparent;
    color: white;
    border: 2px solid white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.2s;
  }

  .btn-outline:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .loading,
  .empty {
    text-align: center;
    color: #666;
    padding: 3rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-content p {
      font-size: 1.2rem;
    }

    .hero-actions {
      flex-direction: column;
    }

    .hero-stats {
      gap: 2rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .features h2,
    .how-it-works h2,
    .cta-section h2 {
      font-size: 2rem;
    }

    .creators-grid {
      grid-template-columns: 1fr;
    }

    .cta-actions {
      flex-direction: column;
    }
  }
</style>
